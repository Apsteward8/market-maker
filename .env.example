# ============================================================================
# .env.example
# Example environment configuration for ProphetX Market Maker
# ============================================================================

# The Odds API Configuration
ODDS_API_KEY=your_odds_api_key_here

# ProphetX API Credentials  
PROPHETX_ACCESS_KEY=your_access_key_here
PROPHETX_SECRET_KEY=your_secret_key_here

# ProphetX Settings
PROPHETX_SANDBOX=true

# Market Making Strategy Settings
FOCUS_SPORT=baseball
TARGET_MARKETS=h2h,spreads,totals
TARGET_BOOKMAKER=pinnacle

# Liquidity and Risk Management
DEFAULT_LIQUIDITY_AMOUNT=100.0
MAX_EXPOSURE_PER_EVENT=500.0
MAX_EXPOSURE_TOTAL=2000.0
MIN_BET_SIZE=5.0
MAX_BET_SIZE=200.0

# Odds Polling and Updates
ODDS_POLL_INTERVAL_SECONDS=60
SIGNIFICANT_ODDS_CHANGE_THRESHOLD=0.02

# Event Filtering
MAX_EVENTS_TRACKED=30
EVENTS_LOOKAHEAD_HOURS=24
MIN_TIME_BEFORE_START_MINUTES=15

# API and Performance Settings
API_DEBUG=false
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30

# Automation and Safety
AUTO_START_POLLING=false
AUTO_CREATE_MARKETS=false
DRY_RUN_MODE=true

# Database and Logging
DATABASE_URL=sqlite:///./market_maker.db
LOG_LEVEL=INFO
SAVE_ODDS_HISTORY=true